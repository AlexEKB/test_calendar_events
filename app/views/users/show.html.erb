<div class="text-center">
  <% unless @user.first_name.blank? || @user.last_name.blank? %>
    <h1><%= @user.first_name + " " + @user.last_name %></h1>
  <% else %>
    <h1><%= @user.email %></h1>
  <% end %>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-default' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Ваши события:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">В вашем календаре нет событий</p>
      <% end %>
    </div>
  </div>
</div>


